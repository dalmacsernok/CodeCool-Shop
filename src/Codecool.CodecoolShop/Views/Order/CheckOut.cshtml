@model UserData

@{
    ViewData["Title"] = "Checkout";
    int orderId = (int) ViewData["orderId"];
}


<form method="post" asp-controller="Order" asp-action="StoreUserData" asp-route-orderId="@orderId">
    <div class="form-group">
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter your name" required>
    </div>
    <div class="form-group">
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
    </div>
    <div class="form-group">
        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter your phone number" required>
    </div>

    <div class="form-group">
        <label>Billing Address</label>
        <div class="form-group">
            <input asp-for="BillingAddress.Country" type="text" class="form-control" placeholder="Country" required>
            <input asp-for="BillingAddress.City" type="text" class="form-control" placeholder="City" required>
            <input asp-for="BillingAddress.ZipCode" type="number"  min="1000" max="9999" class="form-control" placeholder="Zip Code" required>
            <input asp-for="BillingAddress.Address" type="text" class="form-control" placeholder="Address" required>
        </div>
    </div>
    
    <div class="form-group">
        <label>Shipping Address</label>
        <div class="form-group">
            <input asp-for="ShippingAddress.Country" type="text" class="form-control" placeholder="Country" required>
            <input asp-for="ShippingAddress.City" type="text" class="form-control" placeholder="City" required>
            <input asp-for="ShippingAddress.ZipCode" type="number"  min="1000" max="9999" class="form-control" placeholder="Zip Code" required>
            <input asp-for="ShippingAddress.Address" type="text" class="form-control" placeholder="Address" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Go to Payment</button>
</form>